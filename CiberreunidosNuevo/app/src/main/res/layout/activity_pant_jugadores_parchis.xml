<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ciberreunidossa.ciberreunidos.pant_jugadoresParchis"
    android:background="@android:color/holo_orange_light"
    android:orientation="vertical"
    android:weightSum="3">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/logo_small" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.26"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textNiv"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:layout_marginTop="20dp"
            android:text="Selecciona el nÃºmero de jugadores"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="26dip"
            android:typeface="monospace" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:weightSum="3">


        <Button
            android:id="@+id/bt_1Jugador"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/boton"
            android:text="1 Jugador"
            android:textSize="27dip" />

        <Button
            android:id="@+id/bt_2Jugadores"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/boton"
            android:text="2 Jugadores"
            android:textSize="27dip" />
        <Button
            android:id="@+id/bt_3Jugadores"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/boton"
            android:text="3 Jugadores"
            android:textSize="27dip" />
        <Button
            android:id="@+id/bt_4Jugadores"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/boton"
            android:text="4 Jugadores"
            android:textSize="27dip" />

    </LinearLayout>


</LinearLayout>
